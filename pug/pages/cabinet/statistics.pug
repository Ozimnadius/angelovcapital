extends main

block variables
    - var title = 'Статистика'

block content
    .cabinet
        .cabinet__container
            .cabinet__aside
                include blocks/aside
            main.cabinet__main
                .cabinet__top
                    .cabinet__top-left
                        h2.cabinet__title Статистика
                .cabinet__bottom
                    .cabinet__chart
                        script(src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.5.0/Chart.min.js")
                        canvas#chart
                        script.
                            let chart = document.getElementById('chart').getContext('2d'),
                                gradient = chart.createLinearGradient(0, 0, 0, 450);
                            gradient.addColorStop(0, 'rgba(253, 114,76, 0.5)');
                            gradient.addColorStop(1, 'rgba(30, 43, 68, 1)');

                            var data = {
                                labels: ['Май', 'Июнь'],
                                datasets: [
                                    {
                                        backgroundColor: gradient,
                                        borderColor: '#FD724C',
                                        borderWidth: 2,
                                        data: [4, 7.41],
                                        showLine: true
                                    },
                                ]
                            };


                            var options = {
                                responsive: true,
                                maintainAspectRatio: true,
                                animation: false,
                                scales: {
                                    xAxes: [{
                                        gridLines: {
                                            color: 'rgba(200, 200, 200, 0.05)',
                                            lineWidth: 1
                                        }
                                    }],
                                    yAxes: [{
                                        gridLines: {
                                            color: 'rgba(200, 200, 200, 0.08)',
                                            lineWidth: 1
                                        }
                                    }],
                                },
                                elements: {
                                    line: {
                                        tension: 0.4,
                                    }
                                },
                                legend: {
                                    display: false
                                },
                            };


                            var chartInstance = new Chart(chart, {
                                type: 'line',
                                data: data,
                                options: options
                            });

                    .cabinet__table
                        table.table
                            thead
                                tr
                                    th Месяц
                                    th Проценты
                                    th Процент от вложенных спедств
                                    th Прибыль в USD
                                    th Прибыль в RUB
                                    th Сделок
                            tbody
                                tr
                                    td Июнь
                                    td 3.25
                                    td 0.00%
                                    td 7.00 USD
                                    td 0.00 RUB
                                    td 1
                                tr
                                    td Май
                                    td 4.17
                                    td 0.00%
                                    td 3.05 USD
                                    td 0.00 RUB
                                    td 1






